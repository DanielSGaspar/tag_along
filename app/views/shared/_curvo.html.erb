<div class="main">
  <div class="wrapper">
    <div class="box"></div>
    <div class="position-absolute d-flex align-items-center top-div">
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">
        <span><i class="fa-solid fa-bars"></i></span>
      </button>
      <h4 class="profile-name"><%= current_user.full_name %></h4>
    </div>
  </div>
</div>

<div class="offcanvas offcanvas-start slide-menu" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasExampleLabel">
  <div class="offcanvas-header flex-row-reverse">
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="mt-3">
      <ul class="slide-menu-items">
        <li><%= link_to "My dashboard", dashboard_path, class: "dropdown-item" %></li>
        <li><%= link_to "Messages", "#", class: "dropdown-item" %></li>
        <li><%= link_to "Create new ride", new_ride_path, class: "dropdown-item" %></li>
        <li><%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %></li>
      </ul>
    </div>
  </div>
</div>
