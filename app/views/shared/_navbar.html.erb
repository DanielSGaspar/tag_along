<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" id="top">
  <div class="container-fluid">
    <%= link_to dashboard_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", class: "logo-big" %>
      <%= image_tag "logo.png", class: "logo-small" %>
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <p class="brand">Tag Along</p>
            <p class="nav-link"><span data-controller="typed-js"></span></p>
          </li>
        </ul>
      <% end %>
    <div data-controller="dropdown-mobile">
      <button class="navbar-toggler" type="button" data-action="click->dropdown-mobile#toggle">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div data-dropdown-mobile-target="items" class="d-none mobile-pop">
        <% if user_signed_in? %>
          <div class="username"><%= link_to current_user.full_name, dashboard_path%></div>
          <%= link_to "Messages", "#", class: "dropdown-item" %>
          <%= link_to "Create new ride", new_ride_path, class: "dropdown-item" %>
          <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "dropdown-item" %>
        <% end %>
      </div>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <div class="username"><%= link_to current_user.full_name, dashboard_path%></div>
              <%= link_to "Messages", "#", class: "dropdown-item" %>
              <%= link_to "Create new ride", new_ride_path, class: "dropdown-item" %>
              <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign in", new_user_session_path, class: "btn-nav" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
