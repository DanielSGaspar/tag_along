<%= link_to ride_path(ride), class:"no-text-decoration" do %>
  <div class="booking-card mb-3">
    <div class="d-flex">
      <div class="img-ride-card d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path ride.beach.photo.key %>);">
          <div style="margin: 0 10px; text-align: center;">
            <h1 style="font-size: 20px; margin-bottom: 0;"><%= ride.beach.name %></h1>
          </div>
      </div>
      <div style="width: 50%;" class="mt-3">
        <div class="d-flex justify-content-between">
        </div>

        <div class="d-flex justify-content-between position-relative">
          <div class="d-flex align-items-center position-absolute" style="top: 5px; right: 28px;">
            <p class="card-date" style="margin-bottom: 5px;"><i class="fa-solid fa-clock"></i> <%= ride.date_time.strftime("%H:%M") %></p>
          </div>
          <div class="card-location-infos">
            <div class="d-flex justify-content-between" style="width: 100%;">
              <p style="margin-bottom: 5px;">Pick up:</p>
            </div>
            <p style="font-size: 14px; margin-bottom: 0;"><i class="fa-sharp fa-solid fa-location-dot" style="color: #61D8EF;"></i> <%= ride.address.match(/^[^,]+(?=,)/) %></p>
            <p style="font-size: 14px; padding-left: 14px;"><%= ride.city %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
