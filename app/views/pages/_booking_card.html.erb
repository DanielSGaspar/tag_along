<%= link_to booking_path(booking), class:"no-text-decoration" do %>
  <div class="booking-card mb-3">
    <div class="d-flex">
      <div class="img-ride-card d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.saltywaytravel.com/wp-content/uploads/2015/12/10_PraiaPequena_WEB.jpg);">
          <div style="margin: 0 10px;">
            <h1><%= booking.ride.beach.name %></h1>
          </div>
      </div>
      <div style="width: 50%;" class="mt-3">
        <div class="d-flex justify-content-between">
          <% if booking.state == "pending" %>
            <div style="background-color: blue; padding: 5px 15px; color: white;">
              <p style="margin-bottom: 0;"><%= booking.state %></p>
            </div>
          <% else %>
            <div style="background-color: green; padding: 5px 15px; color: white;">
              <p style="margin-bottom: 0;"><%= booking.state %></p>
            </div>
          <% end %>
        </div>
        <div class="d-flex mx-4">
          <p class="me-5 card-date"><i class="fa-solid fa-clock"></i> <%= booking.ride.date_time.strftime("%H:%M") %></p>
        </div>
        <div class="d-flex justify-content-between">
          <div class="card-location-infos">
            <p>Pick up location</p>
            <p style="font-size: 14px;"><i class="fa-sharp fa-solid fa-location-dot" style="color: #61D8EF;"></i> <%= booking.ride.address %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
