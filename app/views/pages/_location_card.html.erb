<%= link_to location_path(location) do %>
  <div class="location-card me-3" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1565865735988-fd5752a02846?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80)">
    <h1 class="absolute name zero-bottom"><%= location.name %></h1>
    <div class="d-flex absolute rides-tag">
      <p class="zero-bottom">Rides: <%= location.rides.count %></p>
    </div>
    <div class="d-flex absolute condition-position">
      <div class="me-2 condition-container green">
        <div class="center">
          <p><i class="fa-solid fa-wind"></i></p>
        </div>
      </div>
      <div class="condition-container orange">
        <div class="center">
          <p><i class="fa-solid fa-water"></i></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
