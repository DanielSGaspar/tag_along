<div class="home-background">
  <div class="title-search-container w-50 text-center" style="display: block;">
    <div class="bg-transparent" style="display: flex; justify-content: center;">
      <h3 class="home-header">Don't have a car? Not familiar with the nearby surfspots? No problem, TAG ALONG with surfers in your area!</h3>
    </div>
    <div class="form-box">
      <%= simple_form_for :search, url: rides_path, method: "GET", html: { class: 'form-inline d-flex' } do |f| %>
      <%#= f.input :pick_up_location, input_html: { value: params[:pick_up_location] }, label: false, class: "form-box", placeholder: "Pick up" %>
      <%= f.select :name, collection: Location::NAMES, prompt: "Drop off", class: "form-box" %>
      <%= f.input :date_time, as: :date, html5: true %>
      <%= f.select :seats, collection: 1..5 %>
      <%= f.submit "Search", class: "btn-blue" %>
      <% end %>
    </div>
  </div>
</div>
