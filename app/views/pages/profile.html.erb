<% if current_user.photo.attached? %>
  <%= cl_image_tag current_user.photo.key, class: "avatar-profile" %>
<% else %>
  <%= image_tag "user.png", class: "avatar-profile" %>
<% end %>

<div class="profile-main d-flex flex-column">
  <div class="d-flex justify-content-between mx-5 my-3">
    <div class="profile-icon"><i class="fa-solid fa-location-dot"></i></div>
    <strong class="my-2 profile-info">Costa da Caparica</strong>
  </div>
  <div class="d-flex justify-content-between mx-5 my-3">
    <div class="profile-icon"><i class="fa-solid fa-car"></i></div>
    <strong class="my-2 profile-info">BMW X6</strong>
  </div>
  <div class="d-flex justify-content-between mx-5 my-3">
    <div class="profile-icon"><i class="fa-solid fa-pencil"></i></div>
    <p class="my-2 profile-info">I'm just a normal guy who likes to surf on the weekends</p>
  </div>
  <div class="group-div">
    <span></span>
  </div>
</div>
