<div>
  <div class="show_rides">
    <div class="title d-flex">
      <%= render "shared/back_btn" %>
      <h1 class="mt-2 ms-3"><strong>Quinta, 9 de março</strong></h1>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <div class="card-location-infos mx-3 mt-4">
      <div class="d-flex">
        <div>
          <p><strong><%= @ride.date_time.strftime("%H:%M") %></strong></p>
        </div>
        <div>
          <p class="mx-2"><i class="fa-sharp fa-solid fa-location-dot" style="color: #61D8EF;"></i></p>
        </div>
        <div>
          <p><%= @ride.address %></p>
          <div style="font-size: 13px; margin-top: -15px;"><p>Lisboa</p></div>
        </div>
      </div>
      <div class="d-flex">
        <div>
          <p><strong><%= @ride.date_time.hour + 1%>:<%= @ride.date_time.strftime("%M")%></strong></p>
        </div>
      <div><p class="mx-2"><i class="fa-sharp fa-solid fa-location-dot" style="color: #61D8EF;"></i></p></div>
        <div>
          <p><%= @ride.beach.name %></p>
          <div style="font-size: 13px; margin-top: -15px;"><p>Sintra</p></div>
        </div>
      </div>
    </div>
  </div>

  <div>
    <hr style="border-width: 8px; border-color:#a9a6a6;">
  </div>

  <div class="d-flex justify-content-between mx-3" style="margin-bottom: -14px;">
    <div>
      <p>Price per seat:</p>
    </div>
    <div>
      <div style="background-color: #61D8EF; border-radius: 35px; padding: 3px 10px;" class="d-flex justify-content-center">
        <div>€ <%= @ride.price %></div>
      </div>
    </div>
  </div>

  <div>
    <hr style="border-width: 8px; border-color:#a9a6a6;">
  </div>

  <div>
    <div class="ride-details">
      <h2>Driver</h2>
    </div>
    <div class="driver-sesh">
      <% if @ride.user.photo.attached? %>
        <%= cl_image_tag @ride.user.photo.key %>
      <% else %>
        <%= image_tag "user.png" %>
      <% end %>
      <div class="driver-sesh-infos" style="position: relative">
        <h2><%= @ride.user.first_name %></h2>
        <p>Hello, my name is <%= @ride.user.full_name  %>. Born and raised in Portugal and passionate about the waves of our coast.</p>
        <div style="position: absolute; margin-top: 6px;"><i class="fa-solid fa-car"></i> Ford F-150</div>
      </div>
    </div>
  </div>

  <div>
    <hr style="border-width: 8px; border-color:#a9a6a6;">
  </div>

  <div>
    <div class="ride-details">
      <h2>Ride Details</h2>
    </div>
    <div class="mx-3 permission-ride">
      <div class="d-flex">
        <div>
          <i class="fa-solid fa-paw paw-icon me-3"></i>
        </div>
        <div>
          <p>pets allowed</p>
        </div>
      </div>
      <div class="d-flex">
        <div>
          <i class="fa-solid fa-ban-smoking me-3"></i>
        </div>
        <div>
          <p>smoking not allowed</p>
        </div>
      </div>
      <div class="d-flex">
        <div>
          <i class="fa-solid fa-chess-bishop me-3"></i>
        </div>
        <div>
          <p>2/5 boards</p>
        </div>
      </div>
    </div>

    <div class="container">
      <div style="width: 100%; height: 500px;" class="rounded-4 mt-1""
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>


  <div class="bk-nw-bx" style="position:fixed; bottom: 0; width: 100%;">
    <%= link_to "Book", new_ride_booking_path(@ride), class:"btn-blue btn-book" %>
  </div>

</div>
