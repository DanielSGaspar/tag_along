<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1565865735988-fd5752a02846?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
</div>

<div style="background-color: #F2FDFF; border-radius: 20px 20px 0 0;">
  <div class="container-rides-index-card mx-3">
    <% if @rides.empty? %>
      <div class="no-results">
        <h1 class="pb-5">No results found..</h1>
        <%= link_to "Try again", root_path, class:"btn-blue" %>
      </div>
    <% else %>
      <h1 class="text-center py-2">Searchresults</h1>
    <% @rides.each do |ride|%>
      <%= render "ride_card", ride: ride %>
      <%end%>
    <% end %>
  </div>
</div>
