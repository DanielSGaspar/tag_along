    <%= link_to ride_path(ride), class:"no-text-decoration text-black" do %>
      <div class="card-location mb-3 position-relative">
        <div class="position-absolute" style="background-color: #61d7efcb; border-radius: 0px 20px 20px 0px; width: 50px; bottom: 16px; left: 0px; z-index: +1;">
          <div class="me-5 mx-1"><%=humanized_money_with_symbol(ride.price)%></div>
        </div>
        <div class="btn-seats-ride d-flex position-absolute" style="bottom: 50px; left: 0; z-index: +1;">
            <i class="fa-solid fa-user icon-seats-ride"></i>
            <div><%=ride.seats%>/5</div>
        </div>
        <div class="d-flex">
          <div style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path ride.beach.photo.key %>);" class="img-ride-card">
          </div>
          <div style="width: 50%;" class="mt-3">

            <div class="d-flex justify-content-between">
              <div class="d-flex">
                <% if user_signed_in? && current_user.photo.attached? %>
                  <%= cl_image_tag ride.user.photo.key, style: "border-radius: 50%; height: 24px; width: 24px;" %>
                <% else %>
                  <%= image_tag "user.png", style: "border-radius: 50%; height: 24px; width: 24px;" %>
                <% end %>
                <h4 style="font-size: 16px;">Driver: <%= ride.user.first_name %></h4>
              </div>
            </div>
            <div class="d-flex mt-2">
              <p class="me-5 card-date"><i class="fa-solid fa-clock"></i> <%= ride.date_time.strftime("%H:%M")%></p>
            </div>
            <div class="d-flex justify-content-between">
              <div class="card-location-infos">
                <p><i class="fa-sharp fa-solid fa-location-dot" style="color: #61D8EF;"></i> <%= ride.address.match(/^[^,]+(?=,)/) %> </p>
                <p><i class="fa-sharp fa-solid fa-location-dot" style="color: #61D8EF;" ></i> <%= ride.beach.name %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <%end%>
